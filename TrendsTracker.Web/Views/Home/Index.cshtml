<!DOCTYPE html>
<html data-ng-app="trendsTrackerApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trends Tracker </title>

    @Styles.Render("~/Content/bootstrap")

    <!-- 3rd party libraries -->
    <script src="/Scripts/jquery-1.9.1.js"></script>
    <script src="/Scripts/angular.js"></script>
    <script src="/Scripts/angular-route.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Custom scripts -->
    <script src="/app/services/keywordRepository.js"></script>
    <script src="/app/controllers/keywordController.js"></script>
    <script src="/app/app.js"></script>

</head>
<body>
    <header class="navbar navbar-default navbar-static-top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">Trends Tracker</a>
            </div>
        </div>
    </header>

    <div class="container body-content">
        <div class="row">
            <div class="col-md-3" id="leftCol">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active">
                        <a href="#">Keywords</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-9" style="position: relative;">
                <div class="loader"></div>
                <div class="mainView" data-ng-view="">
                </div>
            </div>
        </div>

        <hr>
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Łukasz Wiatrak 2014</p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>